{
	"name": "@rednight/i18n",
	"description": "CLI to extract/validate translations from the code",
	"license": "MIT",
	"author": "Rednight Inc.",
	"version": "1.0.0",
	"type": "module",
	"bin": "bin/i18n.js",
	"scripts": {
		"build": "tsup",
		"lint": "eslint lib",
		"lint:fix": "eslint lib --fix",
		"pretty": "prettier --check $(find . -path ./node_modules -prune -o -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
		"pretty:fix": "prettier --write $(find . -path ./node_modules -prune -o -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"ci-info": "^4.0.0",
		"clipanion": "^4.0.0-rc.3",
		"execa": "^8.0.1",
		"gettext-parser": "^8.0.0",
		"lodash": "^4.17.21",
		"semver": "^7.6.0",
		"ttag-cli": "^1.10.10"
	},
	"devDependencies": {
		"@rednight/eslint-config-rednight": "workspace:packages/eslint-config-rednight",
		"@types/gettext-parser": "^4.0.4",
		"@types/lodash": "^4.14.202",
		"eslint": "^8.56.0",
		"terser": "^5.27.0",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	}
}
