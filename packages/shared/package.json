{
  "name": "@rednight/shared",
  "description": "Rednight shared",
  "license": "AGPL-3.0",
  "author": "Rednight Inc.",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/shared.js",
  "exports": {
    ".": {
      "import": "./dist/shared.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build:watch": "tsc && vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint lib",
    "pretty": "prettier --check $(find . -type d \\( -name 'node_modules' -o -name 'dist' \\) -prune -o \\( -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx' \\) -print)",
    "pretty:fix": "prettier --write $(find . -type d \\( -name 'node_modules' -o -name 'dist' \\) -prune -o \\( -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx' \\) -print)"
  },
  "dependencies": {
    "@rednight/colors": "workspace:packages/colors",
    "@rednight/crypto": "workspace:packages/crypto",
    "@rednight/utils": "workspace:packages/utils",
    "jsbi": "^4.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@rednight/eslint-config-rednight": "workspace:packages/eslint-config-rednight",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.28",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3"
  }
}
