{
  "name": "@rednight/crypto",
  "description": "Rednight crypto library",
  "license": "MIT",
  "author": "Rednight Inc.",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/crypto.js",
  "exports": {
    ".": {
      "import": "./dist/crypto.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build:watch": "tsc && vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint lib",
    "pretty": "prettier --check $(find . -path ./node_modules -prune -o -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
    "pretty:fix": "prettier --write $(find . -path ./node_modules -prune -o -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
    "test": "vitest run --passWithNoTests"
  },
  "devDependencies": {
    "@rednight/eslint-config-rednight": "workspace:packages/eslint-config-rednight",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2"
  }
}
